@model PositionDetailViewModel

<h2>Position Details</h2>

<div class="position-details">
    <h3>@Model.Name</h3>
    <p><strong>Rank:</strong> @Model.Rank</p>
    <p><strong>Is Supervisor:</strong> @(Model.IsSupervisor ? "Yes" : "No")</p>
</div>

<h4>Employees in this Position</h4>

@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Department</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees are assigned to this position.</p>
}
