@model PositionDetailViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Position Information Card with Action Buttons -->
            <div class="card shadow-lg border-0 mb-5 rounded-5 position-relative bg-light overflow-hidden">
                <div class="card-body p-5 position-relative">
                    <h2 class="text-primary mb-4">
                        <i class="bi bi-briefcase-fill me-2"></i> Position Overview
                    </h2>
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h3 class="fw-bold text-dark">@Model.Name</h3>
                        <!-- Action Buttons -->
                        <div>
                            <a href="@Url.Action("Edit", "Position", new { id = Model.Id })" class="btn btn-outline-primary btn-sm me-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "Position", new { id = Model.Id })" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                    <p class="text-muted fs-5 mb-3">
                        <span class="fw-semibold">Rank:</span> @Model.Rank
                    </p>
                    <p class="text-muted fs-5">
                        <span class="fw-semibold">Is Supervisor:</span> @(Model.IsSupervisor ? "Yes" : "No")
                    </p>
                </div>
                <!-- Accent Decorative Element -->
                <div class="position-absolute top-0 start-0 w-100" style="height: 6px; background: linear-gradient(90deg, #0d6efd, #6610f2);"></div>
                <!-- Subtle Background Icon -->
                <div class="position-absolute top-50 start-50 translate-middle opacity-10" style="font-size: 12rem; color: #e9ecef;">
                    <i class="bi bi-briefcase-fill"></i>
                </div>
            </div>

            <!-- Employees Section with Shadow and Animation -->
            <div class="card shadow-lg border-0 rounded-5 position-relative">
                <div class="card-body p-5">
                    <h4 class="text-secondary mb-4">
                        <i class="bi bi-people-fill me-2"></i> Employees in this Position
                    </h4>

                    @if (Model.Employees != null && Model.Employees.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-primary text-secondary">
                                    <tr>
                                        <th scope="col" class="text-dark">Employee Name</th>
                                        <th scope="col" class="text-dark">Department</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.Employees)
                                    {
                                        <tr class="table-row">
                                            <td class="fw-semibold text-dark">@employee.EmployeeName</td>
                                            <td class="text-muted">@employee.Department</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted fs-5 mb-0">No employees are currently assigned to this position.</p>
                    }
                </div>
                <!-- Bottom Accent Line -->
                <div class="position-absolute bottom-0 start-0 w-100" style="height: 4px; background: linear-gradient(90deg, #6610f2, #0d6efd);"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Card Styling with Accent and Shadow */
        .card {
            border-radius: 1.5rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1); /* Enhanced shadow */
            background-color: #f9fafb;
        }

        /* Typography */
        h2, h3, h4 {
            margin-bottom: 1rem;
            font-weight: 700;
        }

        h2 {
            color: #0d6efd;
        }

        h4 {
            color: #495057;
        }

        /* Accent Lines */
        .position-absolute {
            z-index: 1;
        }

        /* Subtle 3D Hover Animation for Rows */
        .table-row {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .table-row:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                background-color: #f1f8ff;
            }

        /* Subtle Background Icon */
        .opacity-10 {
            opacity: 0.1;
        }

        /* Table Header Styling */
        .table-primary th {
            background-color: #eaf4ff;
            color: #0d6efd;
            font-weight: 600;
        }

        /* Action Buttons Styling */
        .btn-outline-primary, .btn-outline-danger {
            transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
            font-weight: 500;
        }

            .btn-outline-primary:hover {
                background-color: #0d6efd;
                color: #fff;
                border-color: #0d6efd;
            }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: #fff;
                border-color: #dc3545;
            }
    </style>
}
