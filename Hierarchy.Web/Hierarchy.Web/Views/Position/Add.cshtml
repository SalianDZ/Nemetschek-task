@model PositionFormViewModel

@{
    ViewData["Title"] = "Add Position";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-4 mt-5">
            <div class="card-header bg-primary text-white text-center rounded-top">
                <h3 class="mb-0">@ViewData["Title"]</h3>
                <small class="text-light">Define a new position within the company hierarchy</small>
            </div>
            <div class="card-body p-5">
                <form method="post">
                    <!-- Position Name Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">Position Name</label>
                        <small class="text-muted d-block mb-2">Provide a unique and descriptive name for the position, e.g., "Senior Developer".</small>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 rounded-start">
                                <i class="bi bi-briefcase text-secondary"></i>
                            </span>
                            <input asp-for="Name" class="form-control border-start-0 rounded-end" placeholder="Position Name" />
                        </div>
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>

                    <!-- Position Rank Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Rank" class="form-label fw-semibold">Position Rank</label>
                        <small class="text-muted d-block mb-2">Set the position's rank, where lower numbers indicate higher roles.</small>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 rounded-start">
                                <i class="bi bi-bar-chart text-secondary"></i>
                            </span>
                            <input asp-for="Rank" type="number" class="form-control border-start-0 rounded-end" placeholder="Position Rank" />
                        </div>
                        <span asp-validation-for="Rank" class="small text-danger"></span>
                    </div>

                    <!-- Is Supervisor Checkbox -->
                    <div class="form-group form-check mb-4">
                        <input asp-for="IsSupervisor" type="checkbox" class="form-check-input" id="IsSupervisorCheckbox" />
                        <label asp-for="IsSupervisor" class="form-check-label fw-semibold">Is Supervisor</label>
                        <small class="text-muted d-block">Indicate if this role includes supervisory responsibilities.</small>
                        <span asp-validation-for="IsSupervisor" class="small text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-success px-5 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-check-circle me-1"></i>
                            Save Position
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
