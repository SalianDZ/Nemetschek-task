@model PositionDetailViewModel

<h2>Delete Position</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this position?</h4>
    <p>This action cannot be undone.</p>
    <p><strong>Position Name:</strong> @Model.Name</p>
    <p><strong>Rank:</strong> @Model.Rank</p>
    <p><strong>Supervisor Status:</strong> @(Model.IsSupervisor ? "Yes" : "No")</p>
</div>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
