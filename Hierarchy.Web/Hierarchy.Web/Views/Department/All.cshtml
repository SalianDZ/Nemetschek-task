@model IEnumerable<DepartmentListViewModel>

<h1 class="text-center my-5 display-5 fw-bold text-primary">Our Departments</h1>
<p class="text-center text-muted mb-5">Explore the various departments that drive our success.</p>

<div class="container">
    <div class="row g-4">
        @foreach (var department in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card department-card shadow border-0 rounded-4 h-100 position-relative overflow-hidden">
                    <!-- Floating Badge for Employee Count -->
                    <div class="department-badge bg-gradient-primary text-white rounded-pill animate-badge" style="z-index: 10;">
                        <i class="bi bi-people-fill me-1"></i> @department.EmployeeCount Employees
                    </div>

                    <div class="card-body d-flex flex-column p-5 position-relative" style="padding-top: 4rem; z-index: 10;">
                        <!-- Department Name with Link -->
                        <h5 class="fw-bold text-uppercase text-dark mb-3">
                            <a href="@Url.Action("Details", "Department", new { id = department.Id })" class="text-decoration-none text-primary" style="position: relative; z-index: 10;">
                                <i class="bi bi-building me-2"></i> @department.Name
                            </a>
                        </h5>
@*                         <p class="text-muted">Supporting vital operations and enabling our growth.</p> *@
                        <!-- View Details Button with Explicit Z-Index -->
                        <a href="@Url.Action("Details", "Department", new { id = department.Id })" class="btn btn-outline-primary mt-auto rounded-pill fw-bold department-card-btn" style="position: relative; z-index: 10;">
                            View Details <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                    <!-- Hover Overlay Icon with Lower Z-Index -->
                    <div class="hover-overlay" style="z-index: 5;">
                        <i class="bi bi-building text-primary display-1"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        /* Department Card Styling */
        .department-card {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            background-color: #f8f9fc;
            position: relative;
        }
        .department-card:hover {
            transform: translateY(-6px) scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 123, 255, 0.15);
        }

        /* Floating Badge for Employee Count */
        .department-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.6rem 1.2rem;
            font-size: 0.85rem;
            font-weight: 600;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: linear-gradient(135deg, #007bff, #6a11cb);
        }

        /* Hover Overlay Icon */
        .hover-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 123, 255, 0.05);
            opacity: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: opacity 0.3s ease;
        }
        .department-card:hover .hover-overlay {
            opacity: 1;
        }

        /* Button Hover Effect */
        .department-card-btn {
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .department-card-btn:hover {
            background-color: #007bff;
            color: #fff;
        }
    </style>
}
