@model IEnumerable<DepartmentListViewModel>

<h1>Departments</h1>
<ul>
    @foreach (var department in Model)

    {
        <li>
            <a href="@Url.Action("Details", "Department", new { id = department.Id })">
                @department.Name
            </a> - @department.EmployeeCount employees
        </li>
    }
</ul>