@model DepartmentFormViewModel

@{
    ViewData["Title"] = "Edit Department";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-4 mt-5">
            <div class="card-header bg-primary text-white text-center rounded-top">
                <h3 class="mb-0">@ViewData["Title"]</h3>
                <small class="text-light">Modify the department's details within the company structure</small>
            </div>
            <div class="card-body p-5">
                <form method="post">
                    <!-- Department Name Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">Department Name</label>
                        <small class="text-muted d-block mb-2">Update the department's name, e.g., "Human Resources" or "Finance".</small>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 rounded-start">
                                <i class="bi bi-building text-secondary"></i> <!-- Icon for Department -->
                            </span>
                            <input asp-for="Name" class="form-control border-start-0 rounded-end" placeholder="Department Name" />
                        </div>
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>

                    <!-- Department Description Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">Department Description</label>
                        <small class="text-muted d-block mb-2">Edit the description to reflect the department's role in the organization.</small>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="e.g., Responsible for financial management"></textarea>
                        <span asp-validation-for="Description" class="small text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-success px-5 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-save me-1"></i>
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
