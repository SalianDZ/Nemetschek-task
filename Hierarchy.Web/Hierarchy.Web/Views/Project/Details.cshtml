@model ProjectDetailViewModel

<h2>Project Details</h2>

<div class="project-details">
    <h3>@Model.Name</h3>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "Ongoing")</p>
</div>

<h4>Employees in this Project</h4>

@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Position</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees are assigned to this project.</p>
}
