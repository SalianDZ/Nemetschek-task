@model ProjectFormViewModel

@{
    ViewData["Title"] = "Add Project";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-4 mt-5">
            <div class="card-header bg-primary text-white text-center rounded-top">
                <h3 class="mb-0">@ViewData["Title"]</h3>
                <small class="text-light">Enter project details to add it to the company’s project list</small>
            </div>
            <div class="card-body p-5">
                <form method="post">
                    <!-- Project Name Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">Project Name</label>
                        <small class="text-muted d-block mb-2">Give the project a unique and descriptive name, e.g., "Website Redesign".</small>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 rounded-start">
                                <i class="bi bi-file-earmark-text text-secondary"></i> <!-- Icon for Project Name -->
                            </span>
                            <input asp-for="Name" class="form-control border-start-0 rounded-end" placeholder="Project Name" />
                        </div>
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>

                    <!-- Project Description Field -->
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">Project Description</label>
                        <small class="text-muted d-block mb-2">Provide a brief overview of the project goals and scope.</small>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Description of the project"></textarea>
                        <span asp-validation-for="Description" class="small text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-success px-5 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-check-circle me-1"></i>
                            Save Project
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
