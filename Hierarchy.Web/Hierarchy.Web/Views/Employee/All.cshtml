@model IEnumerable<EmployeeListViewModel>

<h2>All Employees</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Supervisor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Employee", new { id = employee.EmployeeID })">
                            @employee.Name
                        </a>
                    </td>
                    <td>@employee.Position</td>
                    <td>@employee.Department</td>
                    <td>@(string.IsNullOrEmpty(employee.Supervisor) ? "None" : employee.Supervisor)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
